

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<% if @product.quantity < 5  && @product.quantity >= 1 %>
<p>
  Order now! Only <%= @product.quantity %> left in stock!
</p>
  <% elsif @product.quantity == 0 %>
  <p> Sold out.  More in stock soon!</p>
<% end %>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Brand:</strong>
  <%= @product.brand %>
</p>

<p>
  <strong>Rating:</strong>
  <%= @product.rating %>
</p>

<p>
  <strong>Category:</strong>
  <%= @product.category_id %>
</p>

  <% if notice != nil %>
    <p id="notice" class="alert alert-danger"><%= notice %></p>
  <% end %>

<% if @product.quantity > 0 %>
<p>
  <%= form_tag(add_to_cart_path) do %>
    <%= hidden_field_tag :product_id, @product.id %>
    <%= number_field_tag :quantity, nil, min: 1, placeholder: "How Many?" %><br />
  <%= submit_tag "Add to Cart?", class: "btn btn-success" %>
  <% end %>
</p>
<% end %>

<% if can? :update, @product %>
  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %>
<% end %>






